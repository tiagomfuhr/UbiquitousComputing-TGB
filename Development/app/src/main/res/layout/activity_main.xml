<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unisinos.ubiquitouscomputingtgb.MainActivity">

    <LinearLayout
        android:layout_width="269dp"
        android:layout_height="175dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1"
        tools:layout_editor_absoluteY="144dp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintVertical_bias="0.502">

        <TextView
            android:id="@+id/textRangeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Range (Km)"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/rangeText"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Km"
            android:inputType="number"
            android:text="5"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="58dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getLocationAndShowOfferList"
            android:text="Get Near Offers"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
